{
	"class": "heading-settings",
	"rows": [
		{
			"cols": [
				{
					"class": "col-12",
					"controls": {
						"custom": {
							"type": "checkbox",							
							"label": "use-custom-settings",
							"value": 1,
							"popover": {
								"title": "",
								"content": "style-use-custom-settings-popover-content"
							}								
						}
					}
				}
			]
		},
		{
			"cols": [
				{
					"class": "col-12",
					"controls": {
						"headings-color": {
							"type": "color-picker",							
							"label": "color",
							"popover": {
								"title": "",
								"content": "style-section-heading-color-popover-content"
							}							
						}
					}
				},
				{
					"class": "col-12",
					"controls": {
						"headings-font-weight": {
							"type": "select",							
							"popover": {
								"title": "",
								"content": "style-section-heading-font-weight-popover-content"
							},							
							"label": "font-weight",
							"options": [
								{
									"label": "font-style-normal",
									"value": "normal"
								},
								{
									"label": "font-weight-bold",
									"value": "bold"
								}
							]
						}
					}
				},
				{
					"class": "col-12",
					"controls": {
						"headings-text-transform": {
							"type": "select",							
							"label": "text-transform",
							"options": [
								{
									"label": "none",
									"value": "none"
								},
								{
									"label": "text-transform-capitalize",
									"value": "capitalize"
								},
								{
									"label": "text-transform-uppercase",
									"value": "uppercase"
								},
								{
									"label": "text-transform-lowercase",
									"value": "lowercase"
								}
							],
							"popover": {
								"title": "",
								"content": "style-section-heading-text-transform-popover-content"
							}							
						}
					}
				},
				{
					"class": "col-12",
					"controls": {
						"headings-text-shadow": {
							"type": "text-shadow-settings",							
							"label": "text-shadow",
							"popover": {
								"title": "",
								"content": "style-section-heading-text-shadow-popover-content"
							}							
						}
					}
				},
				{
					"class": "col-12",
					"controls": {
						"headings-base-size": {
							"type": "slider",							
							"label": "base-size",
							"default": "",
							"suffix": "px",
							"popover": {
								"title": "",
								"content": "style-section-heading-base-size-popover-content"
							}							
						}
					}
				},
				{
					"class": "col-12",
					"controls": {
						"headings-line-height": {
							"type": "slider",							
							"label": "line-height",
							"min": 0,
							"max": 5,
							"step": 0.1,
							"default": "",
							"suffix": "em",
							"popover": {
								"title": "",
								"content": "style-section-heading-line-height-popover-content"
							}							
						}
					}
				},
				{
					"class": "col-12",
					"controls": {
						"headings-letter-spacing": {
							"type": "slider",							
							"label": "letter-spacing",
							"default": "",
							"suffix": "px",
							"popover": {
								"title": "",
								"content": "style-section-heading-letter-spacing-popover-content"
							}								
						}
					}
				}
			],
			"requires": {
				"custom": 1
			}
		}
	]
}
