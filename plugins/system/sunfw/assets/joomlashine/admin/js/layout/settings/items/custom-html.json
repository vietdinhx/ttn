{
	"class": "custom-html",
	"rows": [
		{
			"cols": [
				{
					"class": "col-12 separator-after",
					"controls": {
						"name": {
							"type": "text",
							"label": "name",
							"popover": {
								"title": "",
								"content": "layout-custom-html-name-popover-content"
							}								
						}
					}
				},
				{
					"class": "col-12 separator-after",
					"controls": {
						"html": {
							"type": "editor",
							"label": "html-content",
							"popover": {
								"title": "",
								"content": "layout-custom-html-content-popover-content"
							}							
						}
					}
				},
				{
					"class": "col-12 separator-after display-in-layout",
					"controls": {
						"visible_in": {
							"type": "visible-in",
							"check-none": false,
							"label": "display-in-layout",
							"options": [
								{ "value": "lg", "label": "desktop" },
								{ "value": "md", "label": "laptop" },
								{ "value": "sm", "label": "tablet" },
								{ "value": "xs", "label": "smartphone" }
							],
							"default": [ "lg", "md", "sm", "xs" ],
							"popover": {
								"title": "",
								"content": "layout-custom-html-display-in-layout-popover-content"
							}							
						}
					}
				},
				{
					"class": "col-12",
					"controls": {
						"class": {
							"type": "text",
							"label": "custom-classes",
							"popover": {
								"title": "",
								"content": "layout-custom-html-custom-classes-popover-content"
							}								
						}
					}
				}
			]
		}
	]
}
