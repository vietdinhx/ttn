{
	"class": "logo",
	"rows": [
		{
			"cols": [
				{
					"class": "col-12 separator-after",
					"controls": {
						"name": {
							"type": "text",
							"label": "name",
							"popover": {
								"title": "",
								"content": "layout-logo-name-popover-content"
							}
						}
					}
				},
				{
					"class": "col-12",
					"controls": {
						"logo": {
							"type": "image-selector",
							"label": "logo",
							"popover": {
								"title": "",
								"content": "layout-logo-popover-content"
							}							
						}
					}
				},
				{
					"class": "col-12",
					"controls": {
						"mobile-logo": {
							"type": "image-selector",
							"label": "mobile-logo",
							"popover": {
								"title": "",
								"content": "layout-mobile-logo-popover-content"
							}							
						}
					}
				},
				{
					"class": "col-12",
					"controls": {
						"alt": {
							"type": "text",
							"label": "logo-alt-text",
							"popover": {
								"title": "",
								"content": "layout-logo-alt-text-popover-content"
							}							
						}
					}
				},
				{
					"class": "col-12 separator-after",
					"controls": {
						"link": {
							"type": "text",
							"label": "logo-link",
							"placeholder": "http://",
							"popover": {
								"title": "",
								"content": "layout-logo-link-popover-content"
							}							
						}
					}
				},
				{
					"class": "col-12 separator-after display-in-layout",
					"controls": {
						"visible_in": {
							"type": "visible-in",
							"check-none": false,
							"label": "display-in-layout",
							"options": [
								{ "value": "lg", "label": "desktop" },
								{ "value": "md", "label": "laptop" },
								{ "value": "sm", "label": "tablet" },
								{ "value": "xs", "label": "smartphone" }
							],
							"default": [ "lg", "md", "sm", "xs" ],
							"popover": {
								"title": "",
								"content": "layout-logo-display-in-layout-popover-content"
							}							
						}
					}
				},
				{
					"class": "col-12",
					"controls": {
						"class": {
							"type": "text",
							"label": "custom-classes",
							"popover": {
								"title": "",
								"content": "layout-logo-custom-classes-popover-content"
							}							
						}
					}
				}
			]
		}
	]
}
