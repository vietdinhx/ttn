{
	"class": "social-icon",
	"rows": [
 		{
			"cols": [
				{
					"class": "col-12 separator-after",
					"controls": {
						"name": {
							"type": "text",
							"label": "name",
							"popover": {
								"title": "",
								"content": "layout-social-icon-name-popover-content"
							}								
						}
					}
				},
				{
					"class": "col-12 separator-after",
					"controls": {
						"items": {
							"type": "social-icons",
							"label": "icons",
							"popover": {
								"title": "",
								"content": "layout-social-icon-icons-popover-content"
							}							
						}
					}
				},
				{
					"class": "col-12",
					"controls": {
						"color": {
							"type": "color-picker",
							"label": "icon-color",
							"popover": {
								"title": "",
								"content": "layout-social-icon-color-popover-content"
							}							
						}
					}
				},
				{
					"class": "col-12",
					"controls": {
						"size": {
							"type": "slider",
							"label": "icon-size",
							"default": 14,
							"suffix": "px",
							"popover": {
								"title": "",
								"content": "layout-social-icon-size-popover-content"
							}							
						}
					}
				},
				{
					"class": "col-12 separator-after",
					"controls": {
						"target": {
							"type": "select",
							"label": "link-target",
							"options": [
								{"value": "_blank", "label" : "Blank"},
								{"value": "_parent", "label" : "Parent"},
								{"value": "_self", "label" : "Self"},
								{"value": "_top", "label" : "Top"}
							],
							"popover": {
								"title": "",
								"content": "layout-social-icon-link-target-popover-content"
							}								
						}
					}
				},
				{
					"class": "col-12 separator-after display-in-layout",
					"controls": {
						"visible_in": {
							"type": "checkbox",							
							"check-none": false,
							"label": "display-in-layout",
							"options": [
								{ "value": "lg", "label": "desktop" },
								{ "value": "md", "label": "laptop" },
								{ "value": "sm", "label": "tablet" },
								{ "value": "xs", "label": "smartphone" }
							],
							"default": [ "lg", "md", "sm", "xs" ],
							"popover": {
								"title": "",
								"content": "layout-social-icon-display-in-layout-popover-content"
							}								
						}
					}
				},
				{
					"class": "col-12",
					"controls": {
						"class": {
							"type": "text",
							"label": "custom-classes",
							"popover": {
								"title": "",
								"content": "layout-social-icon-custom-classes-popover-content"
							}							
						}
					}
				}
			]
		}
	]
}
